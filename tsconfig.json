{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["packages/db/src/index.ts"],
      "@repo/db/*": ["packages/db/src/*"]
    },
    "types": ["bun-types"],
    "resolveJsonModule": true
  }
}

