{
  "name": "recipe-swipe-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @apps/web dev",
    "build": "bun run --filter @apps/web build",
    "preview": "bun run --filter @apps/web preview",
    "db:generate": "bun run --filter @repo/db db:generate",
    "db:push": "bun run --filter @repo/db db:push",
    "scrape:fooby": "bun run --filter @apps/scraper scrape:fooby",
    "scrape:url": "bun run --filter @apps/scraper scrape:url"
  },
  "devDependencies": {
    "typescript": "^5.6.2"
  }
}
